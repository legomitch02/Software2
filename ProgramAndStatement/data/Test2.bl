    PROGRAM TheDominator IS
    BEGIN
        WHILE true DO
         IF next-is-enemy THEN
               infect
            ELSE
                IF next-is-friend THEN
                    turnright
                ELSE
                    IF next-is-wall THEN
                        turnleft
                    ELSE
                        move
                    END IF
                END IF
            END IF
        END WHILE
    END TheDominator